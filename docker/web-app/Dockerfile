# /docker/web-app/Dockerfile
#
# Folder layout inside the image
# â”Œâ”€ /app
# â”‚   â”œâ”€ node_modules     â† installed once during build
# â”‚   â”œâ”€ public           â† static assets
# â”‚   â”œâ”€ start.js         â† standalone server entrypoint
# â”‚   â””â”€ .next            â† output of `npm run build`
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Stage 0 â–¸ Base image
FROM node:18-alpine AS base
WORKDIR /app
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=development

# Stage 1 â–¸ deps
FROM base AS deps
# hadolint ignore=DL3018
RUN apk add --no-cache bash curl ca-certificates

# copy only manifests
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* ./

# SC2015 fix: no "A && B || C" fallthroughs; use explicit branching
RUN set -euo pipefail; \
  if [ -f yarn.lock ]; then \
    echo "ğŸ§¶ Installing with yarnâ€¦"; yarn install --frozen-lockfile; \
  elif [ -f package-lock.json ]; then \
    echo "ğŸ“¦ Installing with npm ciâ€¦"; \
    if ! npm ci; then \
      echo "âš ï¸ npm ci failed â€“ falling back to npm install"; npm install; \
    fi; \
  elif [ -f pnpm-lock.yaml ]; then \
    echo "ğŸ“¦ Installing with pnpmâ€¦"; corepack enable pnpm; pnpm install --frozen-lockfile; \
  else \
    echo "âš ï¸ No lockfile found â€“ running npm install"; npm install; \
  fi

# Stage 2 â–¸ dev
FROM base AS development
COPY --from=deps /app/node_modules /app/node_modules
WORKDIR /app
COPY . .
EXPOSE 3000
CMD ["npm","run","dev"]

# Stage 3 â–¸ builder
FROM base AS builder
COPY --from=deps /app/node_modules /app/node_modules
WORKDIR /app
COPY . .
RUN --mount=type=cache,target=/app/.next/cache npm run build

# Stage 4 â–¸ production
FROM node:18-alpine AS production
ARG VCS_REF
ARG IMAGE_TAG=dev
LABEL org.opencontainers.image.source="https://github.com/Cdaprod/Media-Indexer-Stdlib-Prototype" \
      org.opencontainers.image.vendor="Cdaprod" \
      org.opencontainers.image.title="ThatDAMToolbox - video-web" \
      org.opencontainers.image.licenses="Apache-2.0" \
      org.opencontainers.image.revision=$VCS_REF \
      org.opencontainers.image.version=$IMAGE_TAG
WORKDIR /app
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
RUN addgroup --system --gid 1001 nodejs && adduser --system --uid 1001 --ingroup nodejs nextjs
COPY --from=builder /app/.next        ./.next
COPY --from=builder /app/start.js     ./start.js
COPY --from=builder /app/src/lib      ./src/lib
COPY --from=deps    /app/node_modules ./node_modules
COPY --from=builder /app/public       ./public
USER nextjs:nodejs
EXPOSE 3000
CMD ["node","start.js","start"]
