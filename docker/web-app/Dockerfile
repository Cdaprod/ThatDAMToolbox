# /docker/web-app/Dockerfile
#
# Folder layout inside the image
# â”Œâ”€ /app
# â”‚   â”œâ”€ node_modules     â† installed once during build
# â”‚   â”œâ”€ public           â† static assets
# â”‚   â”œâ”€ start.js         â† standalone server entrypoint
# â”‚   â””â”€ .next            â† output of `npm run build`
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

##############################################################################
# Stage 0 â–¸ Base image (common for all other stages)
##############################################################################
FROM node:18-alpine AS base
WORKDIR /app
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=development

##############################################################################
# Stage 1 â–¸ Install dependencies only once ğŸ§¶ğŸ“¦
##############################################################################
FROM base AS deps

# native addons sometimes need this
RUN apk add --no-cache libc6-compat

# copy only manifests
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* ./

# install *strictly* from whichever lock-file is present
RUN \
  if [ -f yarn.lock ]; then \
        echo "ğŸ§¶ Installing with yarnâ€¦" && yarn install --frozen-lockfile ;\
  elif [ -f package-lock.json ]; then \
        echo "ğŸ“¦ Installing with npm ciâ€¦" && npm ci \
     || (echo 'âš ï¸ npm ci failed â€“ falling back to npm install' && npm install) ;\
  elif [ -f pnpm-lock.yaml ]; then \
        echo "ğŸ“¦ Installing with pnpmâ€¦" && corepack enable pnpm && pnpm install --frozen-lockfile ;\
  else \
        echo 'âš ï¸ No lockfile found â€“ running npm install' && npm install ;\
  fi

##############################################################################
# Stage 2 â–¸ Development image (hot-reload, bind-mount source) ğŸ› ï¸
##############################################################################
FROM base AS development
COPY --from=deps /app/node_modules /app/node_modules
WORKDIR /app
COPY . .
EXPOSE 3000
CMD ["npm", "run", "dev"]

##############################################################################
# Stage 3 â–¸ Build the production artefacts ğŸ“¦ğŸš€
##############################################################################
# Note: requires BuildKit (DOCKER_BUILDKIT=1)
FROM base AS builder
# bring in deps
COPY --from=deps /app/node_modules /app/node_modules
# copy all source
WORKDIR /app
COPY . .

# cache the `.next` SWC/Webpack cache between rebuilds
RUN --mount=type=cache,target=/app/.next/cache \
    npm run build

##############################################################################
# Stage 4 â–¸ Lightweight runtime image ğŸƒâ€â™‚ï¸
##############################################################################
FROM node:18-alpine AS production
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# non-root user for safety
RUN addgroup --system --gid 1001 nodejs && \
    adduser  --system --uid 1001 --ingroup nodejs nextjs

# copy build output + entrypoint
COPY --from=builder /app/.next       ./.next
COPY --from=builder /app/start.js    ./start.js
COPY --from=deps    /app/node_modules ./node_modules
COPY --from=builder /app/public      ./public

USER nextjs:nodejs
EXPOSE 3000

# Next 14 standalone server (inside .next) works out of the box
CMD ["node", "start.js", "start"]