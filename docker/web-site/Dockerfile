# syntax=docker/dockerfile:1.5
#
# Folder layout inside the image
# â”Œâ”€ /app
# â”‚   â”œâ”€ node_modules     â† installed once during build
# â”‚   â”œâ”€ public           â† static assets
# â”‚   â”œâ”€ start.js         â† standalone server entrypoint (if you use it)
# â”‚   â””â”€ .next            â† output of `npm run build`
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Stage 0 â–¸ Base image
FROM node:18-alpine AS base
WORKDIR /app
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=development

# Stage 1 â–¸ deps
FROM base AS deps
# hadolint ignore=DL3018
RUN apk add --no-cache bash curl ca-certificates
# copy only manifests to keep cache hot when source changes
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* ./
# explicit branching; keep line-continuations with '\'
RUN set -euo pipefail; \
  if [ -f yarn.lock ]; then \
    echo "ğŸ§¶ Installing with yarnâ€¦"; \
    corepack enable yarn; \
    yarn install --frozen-lockfile; \
  elif [ -f package-lock.json ]; then \
    echo "ğŸ“¦ Installing with npm ciâ€¦"; \
    if ! npm ci; then \
      echo "âš ï¸ npm ci failed â€“ falling back to npm install"; \
      npm install; \
    fi; \
  elif [ -f pnpm-lock.yaml ]; then \
    echo "ğŸ“¦ Installing with pnpmâ€¦"; \
    corepack enable pnpm; \
    pnpm install --frozen-lockfile; \
  else \
    echo "âš ï¸ No lockfile found â€“ running npm install"; \
    npm install; \
  fi; \
  # ensure the dir exists even if there were zero deps
  mkdir -p node_modules

# Stage 2 â–¸ development
FROM base AS development
COPY --from=deps /app/node_modules /app/node_modules
WORKDIR /app
COPY . .
EXPOSE 3000
CMD ["npm","run","dev"]

# Stage 3 â–¸ builder
FROM base AS builder
COPY --from=deps /app/node_modules /app/node_modules
WORKDIR /app
COPY . .
# BuildKit cache for Next (optional but nice)
RUN --mount=type=cache,target=/app/.next/cache \
    npm run build

# Stage 4 â–¸ production
FROM node:18-alpine AS production
WORKDIR /app